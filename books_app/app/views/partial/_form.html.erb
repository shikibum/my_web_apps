      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title do %>
      <%= t :title %>
    <% end %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :memo do %>
      <%= t :memo %>
    <% end %>
    <%= form.text_area :memo %>
  </div>

  <div class="field">
    <%= form.label :author do %> 
      <%= t :author %>
    <% end %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :picture do %>
      <%= t :picture %>
    <% end %>
    <%= form.file_field :picture, id: :book_picture %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
